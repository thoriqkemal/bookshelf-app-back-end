{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "eqeqeq": "off",
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-unused-vars": "warn",
    "quotes": ["warning", "single", { "avoidEscape": true }],
    "object-curly-spacing": ["error", "always"]
  }
}
